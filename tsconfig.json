{
  "extends": "./tsconfig.common.json",
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "noImplicitAny": false,
    "noLib": false,
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",
    "jsx": "react"
  },
  "exclude": ["node_modules", "**/*.d.ts", "**/*.spec.ts", "**/*.tests.ts"]
}
