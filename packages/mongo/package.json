{
  "name": "@vulcanjs/mongo",
  "version": "0.5.4-alpha.2",
  "description": "Vulcan mongo bindings and helpers",
  "main": "./dist/index.js",
  "files": [
    "dist/"
  ],
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./client": "./dist/client/index.js"
  },
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "client": [
        "./dist/client/index.d.ts"
      ]
    }
  },
  "author": "eric-burel <eb@lebrun-burel.com>",
  "homepage": "https://github.com/VulcanJS/vulcan-npm#readme",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VulcanJS/vulcan-npm.git"
  },
  "scripts": {
    "test": "echo \"Error: run tests from root\" && exit 1",
    "build:client": "webpack --config ./webpack.config.client.js",
    "build:server": "webpack --config ./webpack.config.server.js",
    "build:tsup": "tsup",
    "build:types": "tsc --emitDeclarationOnly --declaration --project tsconfig.build.json # Tsup generates .d.ts but we still need this for .d.ts.map",
    "build": "yarn run build:tsup # yarn run build:client && yarn run build:server"
  },
  "bugs": {
    "url": "https://github.com/VulcanJS/vulcan-npm/issues"
  },
  "dependencies": {
    "@vulcanjs/crud": "^0.5.4-alpha.0",
    "@vulcanjs/model": "^0.5.4-alpha.0",
    "@vulcanjs/utils": "^0.5.4-alpha.2",
    "escape-string-regexp": "4.0.0",
    "lodash": "^4.17.20"
  },
  "peerDependencies": {
    "mongodb": ">= 3.6.2",
    "mongoose": ">= 5.10.15"
  },
  "gitHead": "ee0303a08e123a54d65af6c36410fa8929f9427f",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/mongoose": "^5.10.1",
    "mongodb-memory-server": "^6.9.2"
  }
}
